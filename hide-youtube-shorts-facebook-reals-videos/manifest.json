{
  "manifest_version": 3,
  "name": "Focus Mode - Hide Distractions",
  "version": "1.0",
  "description": "Hide distracting short-form videos from YouTube, Facebook, and Twitter",
  "permissions": ["storage", "tabs", "activeTab"],
  "host_permissions": [
    "*://*.youtube.com/*",
    "*://*.facebook.com/*",
    "*://*.twitter.com/*",
    "*://*.x.com/*",
    "*://*/*"
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["content/common.js", "content/youtube.js", "content/bootstrap.js"],
      "css": ["content/youtube.css", "content/anysite.css"],
      "run_at": "document_idle"
    },
    {
      "matches": ["*://*.facebook.com/*"],
      "js": ["content/common.js", "content/facebook.js", "content/bootstrap.js"],
      "css": ["content/facebook.css", "content/anysite.css"],
      "run_at": "document_idle"
    },
    {
      "matches": ["*://*.twitter.com/*", "*://*.x.com/*"],  
      "js": ["content/common.js", "content/twitter.js", "content/bootstrap.js"],
      "css": ["content/twitter.css", "content/anysite.css"],
      "run_at": "document_idle"
    },
    {
      "matches": ["*://*/*"],
      "exclude_matches": ["*://*.youtube.com/*", "*://*.facebook.com/*", "*://*.twitter.com/*", "*://*.x.com/*"],
      "js": ["content/common.js", "content/anysite.js", "content/bootstrap.js"],
      "css": ["content/anysite.css"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}
