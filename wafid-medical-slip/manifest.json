{
  "manifest_version": 3,
  "name": "Wafid Helper",
  "version": "1.0.0",
  "description": "Popup button to set #choose-mc text on wafid.com.",
  "permissions": [
    "tabs",
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://*.wafid.com/*",
        "http://*.wafid.com/*",
        "https://wafid.com/*",
        "http://wafid.com/*"
      ],
      "js": ["content/content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
